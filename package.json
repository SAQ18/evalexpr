{
  "name": "evalexpr",
  "version": "1.0.7",
  "description": "A secure TypeScript expression evaluator for dynamic form validation and conditional logic with support for context variables, form fields, and custom functions",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.mjs",
    "dist/**/*.cjs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && npm run rename:esm",
    "build": "npm run build:cjs && npm run build:esm",
    "clean": "rimraf dist",
    "rename:esm": "bash ./scripts/fix-mjs.sh",
    "prepack": "npm run clean && npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAQ18/evalexpr.git"
  },
  "keywords": [
    "expression-evaluator",
    "form-validation",
    "conditional-logic",
    "typescript",
    "parser",
    "ast",
    "evaluator",
    "safe-eval",
    "dynamic-forms",
    "business-rules",
    "context-variables",
    "form-fields",
    "boolean-expressions",
    "rule-engine",
    "expression-parser",
    "conditional-rendering",
    "form-logic",
    "validation-engine",
    "secure-evaluation",
    "custom-functions",
    "lexer",
    "syntax-parser",
    "expression-language",
    "form-conditions",
    "reactive-forms",
    "expression",
    "math",
    "evaluate",
    "eval",
    "function",
    "parser"
  ],
  "author": "Muhammad Saqib",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SAQ18/evalexpr/issues"
  },
  "homepage": "https://github.com/SAQ18/evalexpr#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.4.0",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  }
}
